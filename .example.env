# Node Environment (development | production)
NODE_ENV=development

# Port for the Next.js app (default is 3000)
PORT=3000

# Public environment variables (accessible in both client and server-side code in Next.js)
NEXT_PUBLIC_API_URL=https://api.example.com
NEXT_PUBLIC_APP_NAME=Next.js Boilerplate

# Secret environment variables (server-side only)
SECRET_API_KEY=your-secret-api-key

# Database URL (optional, example for a database connection string)
DATABASE_URL=postgresql://user:password@localhost:5432/mydatabase

# Optional variables for authentication (replace with actual keys)
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000